<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:id="@+id/background">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/worldOverlay"
        android:src="@drawable/world_overlay_side_cropped"
        android:contentDescription="@string/worldOverlay"
        android:adjustViewBounds="false"/>

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:text="@string/initialDegree"
        android:textSize="60sp"
        android:textIsSelectable="true"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff" />

    <ImageView
        android:id="@+id/imageViewCompass"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/compass3"
        android:layout_below="@+id/tvHeading"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingStart="10dp"
        android:paddingEnd="10dp" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skinsButton"
        android:id="@+id/skinsButton"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:enabled="true"
        android:visibility="visible"
        android:textColor="#ffffffff"
        android:onClick="showSkins"
        android:layout_alignParentTop="true"
        android:textSize="17sp" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/feedbackButton"
        android:id="@+id/feedbackButton"
        android:enabled="true"
        android:typeface="normal"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="sendFeedback"
        android:textColor="#ffffffff"
        android:textSize="17sp"
        android:layout_marginLeft="5dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView"
        android:clickable="true"
        android:src="@drawable/north"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

</RelativeLayout>